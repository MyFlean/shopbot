# Environment Variables Template
# Copy this file to .env_prod and fill in your actual values
# DO NOT COMMIT .env_prod to git!

APP_ENV="production"
FLASK_ENV="production"
SECRET_KEY="your-secret-key-here"
LOG_LEVEL="INFO"
BOT_LOG_LEVEL="DETAILED"

# Redis Configuration
REDIS_HOST="your-redis-host"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_TTL_SECONDS="86400"

# Anthropic API
ANTHROPIC_API_KEY="your-anthropic-api-key"
LLM_MODEL="claude-sonnet-4-20250514"
LLM_TEMPERATURE="0.1"
LLM_MAX_TOKENS="2000"

# Feature Flags
ENABLE_WHATSAPP_FLOWS="true"
ENABLE_FLOW_GENERATION="true"
ENABLE_ENHANCED_LLM="true"
FLOW_WHITELIST_USERS=""
MAX_FLOW_PRODUCTS="6"
ENHANCED_LLM_TIMEOUT="30"
VALIDATE_FLOW_PAYLOADS="true"
FLOW_DEBUG_MODE="false"
USE_MOCK_PRODUCT_DATA="false"
ENABLE_FLOW_ANALYTICS="true"

# Frontend Configuration
FE_TEST_STATIC_PAYLOADS="true"
FE_TEST_WA_ID="your-whatsapp-id"
FRONTEND_WEBHOOK_INSECURE="false"
FRONTEND_WEBHOOK_URL="https://your-frontend-url/backend-response"
WEBHOOK_SSL_VERIFY="true"
FE_WEBHOOK_LOG_RESPONSE="true"
FE_WEBHOOK_LOG_PAYLOADS="true"
FRONTEND_WEBHOOK_TIMEOUT="20"
FE_WEBHOOK_MAX_RETRIES="3"
FE_WEBHOOK_RETRY_BASE_MS="250"

# Application Configuration
PYTHONUNBUFFERED="1"
USE_GCP_LOGGING="true"
GUNICORN_CMD_ARGS="--access-logfile - --error-logfile - --log-level info --timeout 90 --graceful-timeout 90 --workers 2 --threads 4"

# External APIs
ELASTIC_API_KEY="your-elastic-api-key"

# Flow Configuration
FLOW_PRIVATE_KEY="/secrets/flow-private-key"

# Application Features
USE_COMBINED_CLASSIFY_ASSESS="true"
USE_CONVERSATION_AWARE_CLASSIFIER="true"
USE_ROUTER_V2="false"
USE_ASSESSMENT_FOR_ASK_ONLY="false"
HISTORY_MAX_SNAPSHOTS="5"
ASK_ONLY_MODE="false"
USE_TWO_CALL_ES_PIPELINE="false"
